@model CourseManager.Models.CourseManagements
@using CourseManager.Models
@{
    ViewBag.Title = "Create";
    var classes = (List<Classes>)ViewBag.Classes;
    var teachers = (List<Teachers>)ViewBag.Teachers;
    var courses = (List<Course>)ViewBag.Courses;
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CourseManagements</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClassId)
        </div>
       
        <select name="ClassId" class="form-control">
            @foreach (var cls in classes)
            {
                <option value="@cls.Id">@cls.Name</option> 
            }
        </select>

        <div class="editor-label">
            @Html.LabelFor(model => model.CourseId)
        </div>
        <select name="ClassId" class="form-control">
            @foreach (var course in courses)
            {
                <option value="@course.Id">@course.Name</option> 
            }
        </select>
        <div class="editor-label">
            @Html.LabelFor(model => model.TeacherId)
        </div>
        <select name="ClassId" class="form-control">
            @foreach (var teacher in teachers)
            {
                <option value="@teacher.Id">@teacher.Name</option> 
            }
        </select>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
